<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Lambda.GraphQL</PackageId>
    <Description>Generate GraphQL schemas from AWS Lambda functions using AppSync</Description>
    <PackageTags>aws;lambda;graphql;appsync;schema;generator</PackageTags>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <DevelopmentDependency>true</DevelopmentDependency>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="\" />
    <None Include="build/Lambda.GraphQL.props" Pack="true" PackagePath="build\" />
    <None Include="build/Lambda.GraphQL.targets" Pack="true" PackagePath="build\" />
  </ItemGroup>

  <!-- Bundle source generator and build task as analyzers -->
  <ItemGroup>
    <None Include="../Lambda.GraphQL.SourceGenerator/bin/$(Configuration)/netstandard2.0/Lambda.GraphQL.SourceGenerator.dll" Pack="true" PackagePath="analyzers/dotnet/cs/Lambda.GraphQL.SourceGenerator.dll" />
    <None Include="../Lambda.GraphQL.Build/bin/$(Configuration)/net6.0/Lambda.GraphQL.Build.dll" Pack="true" PackagePath="tools/Lambda.GraphQL.Build.dll" />
  </ItemGroup>

</Project>
